# Copy to .env and fill. For Docker: use service names (mongodb, postgres, redis).
# For local dev without Docker: use localhost for DB_HOST/REDIS_HOST.

# --- API Gateway (3000) ---
GATEWAY_PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
COMMENTS_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
ORDER_SERVICE_URL=http://localhost:3005

# --- Auth (3001) ---
PORT=3001
SERVICE_NAME=auth-service
DB_HOST=mongodb
DB_PORT=27017
DB_NAME=auth_db
REDIS_HOST=redis
REDIS_PORT=6379
JWT_EXPIRY=24h

# --- Product (3002) ---
PORT=3002
SERVICE_NAME=product-service
DB_HOST=mongodb
DB_PORT=27017
DB_NAME=product_db
REDIS_HOST=redis
REDIS_PORT=6379

# --- Comments (3003) ---
PORT=3003
SERVICE_NAME=comments-service
DB_HOST=mongodb
DB_PORT=27017
DB_NAME=comments_db
REDIS_HOST=redis
REDIS_PORT=6379

# --- Payment (3004) ---
PORT=3004
SERVICE_NAME=payment-service
DB_HOST=postgres
DB_PORT=5432
DB_NAME=payment_db
DB_USER=postgres
DB_PASSWORD=postgres
REDIS_HOST=redis
REDIS_PORT=6379
BLOCKCHAIN_RPC_URL=

# --- Order (3005) ---
PORT=3005
SERVICE_NAME=order-service
DB_HOST=postgres
DB_PORT=5432
DB_NAME=order_db
DB_USER=postgres
DB_PASSWORD=postgres
REDIS_HOST=redis
REDIS_PORT=6379

# --- Optional ---
LOG_LEVEL=info
